<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_f5f5f5"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="58dp">
            <TextView
                android:id="@+id/tvScenario"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/FF1E1E24"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvType"
                android:textColor="@color/FF1E1E24"
                android:textSize="15sp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_f2f2f2"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="13dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Description"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:textColor="@color/FF9496A1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvFeedbackDescCount"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:text="0/200"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:minHeight="180dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etFeedbackDesc"
                android:layout_width="match_parent"
                android:background="@null"
                android:minHeight="180dp"
                android:gravity="left"
                android:padding="15dp"
                android:textSize="15sp"
                android:hint="Please tell us what you were doing, your experience, or anything helpful for us to better undersand your feedback. Thanks."
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="13dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Screenshot"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:textColor="@color/FF9496A1"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:text="0/4"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:minHeight="180dp"
            android:layout_marginRight="15dp"
            android:layout_height="138dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Contact Email"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="@color/FF9496A1"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:layout_marginRight="15dp"
            android:layout_height="48dp">
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:background="@null"
                android:padding="15dp"
                android:hint="For further communication"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:text="Send"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/main_color_bt_bg_8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_height="48dp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>