<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llParent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvUserName"
                    android:textColor="@color/FF1E1E24"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvIvAmount"
                    android:textColor="@color/FF1E1E24"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="12dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/tabbar_feedback_picture"
                    android:layout_height="12dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvTime"
                android:textColor="@color/FF9496A1"
                android:layout_marginLeft="15dp"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvQuestion"
                android:textColor="@color/FF1E1E24"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/tvLeft"
            android:layout_width="7dp"
            android:background="@color/color_6646f7"
            android:layout_alignTop="@+id/llParent"
            android:layout_alignBottom="@id/llParent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>